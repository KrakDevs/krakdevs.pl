{% extends "::base.html.twig" %}

{% block body %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="row">
    <div class="col-lg-offset-3 col-lg-6">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group{% if error %} has-error{% endif %}">
                <label class="control-label required" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group{% if error %} has-error{% endif %}">
                <label class="control-label required" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
            <div class="form-group{% if error %} has-error{% endif %}">
                <div class="checkbox">
                    <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                </div>
            </div>

            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            <a class="btn btn-warning" href="{{ url('fos_user_resetting_request') }}">{{ 'security.password.reset'|trans }}</a>
        </form>
    </div>
</div>
{% endblock body %}
