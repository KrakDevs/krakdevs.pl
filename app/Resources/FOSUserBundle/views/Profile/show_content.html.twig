<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}: {{ user.email }}</p>
    {% if user.githubId is null %}
    <p><a class="btn btn-default" href="{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}" >{{ 'profile.show.github.connect'|trans }}</a></p>
    {% else %}
    <p>{{ 'profile.show.github.id'|trans }}: {{ user.githubId }}</p>
    {% endif %}
</div>
